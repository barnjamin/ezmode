{
  "compilerOptions": {
    "target": "es2020",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": false,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "explainFiles":true,
  }
}
